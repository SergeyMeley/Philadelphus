<Window x:Class="Philadelphus.Presentation.Wpf.UI.Views.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Width="400" Height="300" 
        ResizeMode="NoResize">

    <Border x:Name="MainBorder" Background="#E0F7FA" CornerRadius="20" 
            Width="380" Height="280" Margin="10"
            BorderBrush="#00BCD4" BorderThickness="2"
            Opacity="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Логотип/Заголовок -->
            <TextBlock x:Name="TitleText" Grid.Row="1" Text="Чубушник" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="#00695C" Opacity="0">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="20"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Спиннер (три элемента) -->
            <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
                <Ellipse x:Name="SpinnerOuter" Width="80" Height="80" 
                         Fill="#26C6DA" Opacity="0.6">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="RotateOuter" CenterX="40" CenterY="40"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#00ACC1" ShadowDepth="0" BlurRadius="15" Opacity="0.7"/>
                    </Ellipse.Effect>
                </Ellipse>

                <Ellipse x:Name="SpinnerInner" Width="60" Height="60" 
                         Fill="#E0F7FA" Margin="10">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="RotateInner" CenterX="30" CenterY="30"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse x:Name="SpinnerDot" Width="16" Height="16" 
                         Fill="#00695C" HorizontalAlignment="Center" 
                         VerticalAlignment="Top" Margin="0,0,0,0">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="RotateDot" CenterX="40" CenterY="40"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <!-- Текст прогресса -->
            <TextBlock x:Name="LoadingText" Grid.Row="2" Text="Загрузка" 
                       FontSize="20" HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       Foreground="#00695C"/>
        </Grid>
    </Border>
</Window>
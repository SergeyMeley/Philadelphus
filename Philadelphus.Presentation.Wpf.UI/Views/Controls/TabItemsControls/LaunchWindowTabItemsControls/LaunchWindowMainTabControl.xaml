<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.TabItemsControls.LaunchWindowTabItemsControls.LaunchWindowMainTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.TabItemsControls.LaunchWindowTabItemsControls"
             xmlns:ctrls="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto" MaxHeight="300"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Margin="10">
        <Run Text="Здравствуйте, "></Run><Run Text="{Binding UserName, Mode=OneWay}" FontWeight="Bold"></Run><Run Text="!"></Run>
        <Run Text="Выберите репозиторий для начала работы или создайте новый"></Run>
        </TextBlock>
        <GroupBox Grid.Row="1" Header="Создать">
            <ctrls:RepositoryCreation DataContext="{Binding RepositoryCreationVM}"></ctrls:RepositoryCreation>
        </GroupBox>
        <GroupBox Grid.Row="2" Header="Открыть">
            <ctrls:FavoriteAndLastRepositoryHeaders></ctrls:FavoriteAndLastRepositoryHeaders>
        </GroupBox>
    </Grid>
</UserControl>

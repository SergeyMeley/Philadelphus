<Window x:Class="Philadelphus.Presentation.Wpf.UI.Views.Windows.AttributeValuesCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Windows"
        mc:Ignorable="d"
        Title="Список значений атрибута">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Добавленные значения">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding SelectedRepositoryMember.SelectedAttributeVM.AssignedValues}" DisplayMemberPath="Name"></ListBox>
            </ScrollViewer>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Все значения">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox DataContext="{Binding SelectedRepositoryMember.SelectedAttributeVM}" ItemsSource="{Binding ValuesList}" SelectedItem="{Binding SelectedValue}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Uuid}" Width="250"></TextBlock>
                                <TextBlock Text=" Наименование: "></TextBlock>
                                <TextBlock Text="{Binding Name}"></TextBlock>
                                <TextBlock Text=" Значение: "></TextBlock>
                                <TextBlock Text="{Binding StringValue}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </GroupBox>
        <Button Grid.Row="2" Content="Добавить значение" Command="{Binding AddAttributeValueCommand}" Height="30" Margin="1"/>
        <Button Grid.Row="3" Content="Исключить значение" Command="{Binding RemoveAttributeValueCommand}" Height="30" Margin="1"/>
    </Grid>
</Window>

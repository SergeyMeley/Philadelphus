<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids.DataStorageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование" Margin="2"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" Margin="2" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание" Margin="2"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description, Mode=OneWay}" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}" Margin="2"></TextBox>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Uuid" Margin="2"></TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Uuid, Mode=OneWay}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Тип хранилища" Margin="2"></TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding InfrastructureType, Mode=OneWay}" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}" Margin="2"></TextBox>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Доступен" Margin="2"></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding IsAvailable, Mode=OneWay}" Margin="2"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Последняя проверка" Margin="2"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LastCheckTime, Mode=OneWay}" Margin="2"></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Отключен" Margin="2"></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding IsDisabled, Mode=OneWay}" Margin="2"></TextBlock>
        <GroupBox Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="100" Header="Хранимые сущности">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
                    <ColumnDefinition Width="*" MinWidth="100"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Настройки хранилищ данных" Margin="2"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding HasDataStoragesCollectionInfrastructureRepository, Mode=OneWay}" Margin="2"></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Настройки заголовков репозиториев" Margin="2"></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding HasTreeRepositoryHeadersCollectionInfrastructureRepository, Mode=OneWay}" Margin="2"></TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Репозитории" Margin="2"></TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding HasTreeRepositoriesInfrastructureRepository, Mode=OneWay}" Margin="2"></TextBlock>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Участники репозитория" Margin="2"></TextBlock>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding HasMainEntitiesInfrastructureRepository, Mode=OneWay}" Margin="2"></TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>

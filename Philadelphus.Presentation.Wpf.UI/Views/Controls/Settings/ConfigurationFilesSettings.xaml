<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.Settings.ConfigurationFilesSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <DataGrid Grid.Row="0" AutoGenerateColumns="False" ItemsSource="{Binding ConfigFiles}" SelectedItem="{Binding SelectedConfigFile}" Margin="1" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Настроечный файл" Binding="{Binding ConfigName, Mode=OneWay}" Width="auto"></DataGridTextColumn>
                    <DataGridTextColumn Header="Путь к файлу" Binding="{Binding FilePath, Mode=OneWay}" Width="*"></DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="Доступность файла" Binding="{Binding Exists, Mode=OneWay}" Width="auto"></DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Grid.Row="1">
            <Button Content="Открыть файл" Command="{Binding OpenConfigCommand}" Height="30" Margin="1"></Button>
            <Button Content="Переместить файл" Command="{Binding MoveConfigCommand}" Height="30" Margin="1"></Button>
            <Button Content="Выбрать другой файл" Command="{Binding SelectAnotherConfigCommand}" Height="30" Margin="1"></Button>
        </StackPanel>
    </Grid>
</UserControl>

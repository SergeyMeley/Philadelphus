                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
    </Window.Resources>
    <Grid>
        <TabControl Style="{StaticResource LeftVerticalTabControlStyle}"
                    ItemsSource="{Binding LaunchWindowTabItemsVMs}"
                    SelectedItem="{Binding SelectedLaunchWindowTabItemVM, Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border Name="Border" 
                                    BorderThickness="1,1,0,1" 
                                    BorderBrush="LightSlateGray" 
                                    Margin="1">
                                        <ContentPresenter ContentSource="Header"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#E0F0FF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Height="75"
                                    Width="90"
                                    Margin="5,5">
                            <Image Source="{Binding IconKey, Converter={StaticResource iconToImageConverter}}"
                                   Width="45"
                                   Height="45"
                                   Margin="0,5,0,0"
                                   Stretch="Uniform"/>
                            <TextBlock Text="{Binding Header}"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,5"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding Content}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

    </Grid>
</Window>
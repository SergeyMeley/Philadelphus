<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids.TreeRootMemberDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <local:TreeRepositoryMemberDetails Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100"></local:TreeRepositoryMemberDetails>
        <Expander Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="100" Header="Родительский корень">
            <GroupBox>
                <local:UniversalDetails DataContext="{Binding Model.ParentRepository}"></local:UniversalDetails>
            </GroupBox>
        </Expander>
        <Expander Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="100" Header="Родитель">
            <GroupBox>
                <local:UniversalDetails DataContext="{Binding Model.Parent}"></local:UniversalDetails>
            </GroupBox>
        </Expander>
    </Grid>
</UserControl>

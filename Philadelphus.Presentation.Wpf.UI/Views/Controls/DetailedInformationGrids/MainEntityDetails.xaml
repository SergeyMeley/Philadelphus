<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids.MainEntityDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.DetailedInformationGrids"
             xmlns:converters="clr-namespace:Philadelphus.Presentation.Wpf.UI.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IsAvailableToColorConverter x:Key="isAvailableToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100" Text="Основная информация:" FontWeight="Bold" Margin="2"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование" Margin="2"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" Margin="2" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание" Margin="2"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description}" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}" Margin="2"></TextBox>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Uuid" Margin="2"></TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Uuid, Mode=OneWay}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Псевдоним" Margin="2"></TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Alias}" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}" Margin="2"></TextBox>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Пользовательский код" Margin="2"></TextBlock>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CustomCode}" IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}" Margin="2"></TextBox>
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Состояние" Margin="2"></TextBlock>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding State, Mode=OneWay}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Тип сущности" Margin="2"></TextBlock>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding EntityType, Mode=OneWay}" IsReadOnly="True" Margin="2"></TextBox>

        <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="100" Text="Хранилище:" FontWeight="Bold" Margin="2"></TextBlock>
        <local:DataStorageDetails DataContext="{Binding StorageVM}" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="100"></local:DataStorageDetails>

        <TextBlock Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="100" Text="Аудит:" FontWeight="Bold" Margin="2"></TextBlock>
        <local:AuditInfoDetails DataContext="{Binding AuditInfo}" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="100"></local:AuditInfoDetails>

    </Grid>
</UserControl>

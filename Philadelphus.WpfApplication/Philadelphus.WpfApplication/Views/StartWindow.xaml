<Window x:Class="Philadelphus.WpfApplication.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Philadelphus.WpfApplication.Views"
        mc:Ignorable="d"
        Title="StartWindow" Height="200" Width="400">
    <Window.Visibility>
        <Binding Path="StartWindowVisibility"/>
    </Window.Visibility>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2">
            <Run Text="Здравствуйте, "></Run>
            <Run Text="{Binding UserName}"></Run>
            <Run Text="! "></Run>
            <Run Text="Выберите репозиторий для начала работы"></Run>
        </TextBlock>
        <ComboBox Grid.Row="1" Margin="2" DataContext="{Binding RepositoryCollectionViewModel}" DisplayMemberPath="TreeRepository.Name" ItemsSource="{Binding TreeRepositoriesVMs}" SelectedItem="{Binding CurrentRepositoryExplorerVM}" SelectedValuePath="TreeRepository.Name"></ComboBox>
        <Button Grid.Row="2" Content="Начать!" Command="{Binding OpenMainWindowCommand}" Margin="2"></Button>
    </Grid>
</Window>

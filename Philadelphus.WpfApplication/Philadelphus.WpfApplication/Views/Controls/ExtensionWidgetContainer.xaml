<UserControl x:Class="Philadelphus.WpfApplication.Views.Controls.ExtensionWidgetContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.WpfApplication.Views.Controls"
             xmlns:converters="clr-namespace:Philadelphus.WpfApplication.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:CanExecuteToColorConverter x:Key="canExecuteToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <GroupBox>
            <ScrollViewer>
                <StackPanel>
                    <StackPanel>
                        <TextBlock Text="Доступные расширения:" Margin="0,0,0,5" FontWeight="Bold" />
                        <ComboBox ItemsSource="{Binding Extensions}" SelectedItem="{Binding SelectedExtension}" DisplayMemberPath="Name" SelectedValuePath="Name" Margin="0,0,0,10"></ComboBox>
                        <Ellipse Width="20" Height="20" Margin="0,0,10,0" Fill="{Binding SelectedExtension.LastCanExecuteResult.CanExecute, Converter={StaticResource canExecuteToColorConverter}}" ToolTip="{Binding SelectedExtension.LastCanExecuteResult.Message}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Запустить" Command="{Binding StartExtensionCommand}" Margin="1"></Button>
                            <Button Content="Остановить" Command="{Binding StopExtensionCommand}" Margin="1"></Button>
                            <Button Content="Выполнить" Command="{Binding ExecuteExtensionCommand}" Margin="1"></Button>
                        </StackPanel>
                        <GroupBox Header="Виджет расширения">
                            <StackPanel>
                                <ContentControl Content="{Binding SelectedExtension.RepositoryExplorerWidget}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>

<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.ReportProcessor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Настройки отчета" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Grid.Column="0" Header="Выбор отчета" Margin="2">
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"></RowDefinition>
                                <RowDefinition Height="20"></RowDefinition>
                                <RowDefinition Height="20"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Группа отчетов" Margin="2"></TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Отчет" Margin="2"></TextBlock>
                            <ComboBox  Grid.Row="0" Grid.Column="1" Margin="2"></ComboBox>
                            <ComboBox  Grid.Row="1" Grid.Column="1" Margin="2"></ComboBox>
                        </Grid>
                    </GroupBox>
                    <GridSplitter Grid.Row="1" Grid.Column="0" ShowsPreview="False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"></GridSplitter>
                    <GroupBox Grid.Row="2" Grid.Column="0" Header="Шаблон" Margin="2">
                        <StackPanel>
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Шаблон" Margin="2"></TextBlock>
                                <ComboBox  Grid.Row="0" Grid.Column="1" Margin="2"></ComboBox>
                            </Grid>
                            <Button Content="Сохранить шаблон" Margin="2"></Button>
                            <Button Content="Сохранить новый" Margin="2"></Button>
                        </StackPanel>

                    </GroupBox>
                    <GridSplitter Grid.Row="3" Grid.Column="0" ShowsPreview="False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"></GridSplitter>
                    <GroupBox Grid.Row="4" Grid.Column="0" Header="Набор полей" Margin="2">
                        <StackPanel>
                            <DataGrid Margin="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="№"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Атрибут"></DataGridTextColumn>
                                    <DataGridComboBoxColumn Header="Значения"></DataGridComboBoxColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Row="0" Grid.Column="0" Content="Добавить" Margin="2"></Button>
                                <Button Grid.Row="0" Grid.Column="1" Content="Удалить" Margin="2"></Button>
                            </Grid>
                            <Button Content="Сбросить" Margin="2"></Button>
                        </StackPanel>
                    </GroupBox>
                    <GridSplitter Grid.Row="5" Grid.Column="0" ShowsPreview="False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"></GridSplitter>
                    <GroupBox Grid.Row="6" Grid.Column="0" Header="Фильтрация результатов" Margin="2">
                        <StackPanel>
                            <DataGrid Margin="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="№"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Атрибут"></DataGridTextColumn>
                                    <DataGridComboBoxColumn Header="Значения"></DataGridComboBoxColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Row="0" Grid.Column="0" Content="Добавить" Margin="2"></Button>
                                <Button Grid.Row="0" Grid.Column="1" Content="Удалить" Margin="2"></Button>
                            </Grid>
                            <Button Content="Сбросить" Margin="2"></Button>
                        </StackPanel>
                    </GroupBox>
                    <GridSplitter Grid.Row="7" Grid.Column="0" ShowsPreview="False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"></GridSplitter>
                    <GroupBox Grid.Row="8" Grid.Column="0" Header="Результат" Margin="2">
                        <StackPanel Grid.Row="6" Grid.Column="0">
                            <Button Content="Сформировать отчет" Margin="2"></Button>
                            <Button Content="Экспорт отчета" Margin="2"></Button>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="1" Header="Отчет" Margin="2">
                <DataGrid AutoGenerateColumns="True">

                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.Settings.ConnectionStringContainersSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="ProvidersNames" Source="{Binding ProvidersNames}"></CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Создать">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Провайдер" Margin="1"></TextBlock>
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding ProvidersNames}" SelectedValue="{Binding NewConnectionStringContainerSelectedProvider}" Margin="1"></ComboBox>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Строка подключения" Margin="1"></TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewConnectionStringContainerConnectionString}" Margin="1"></TextBox>
                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="10" Content="Добавить и сохранить" Command="{Binding CreateAndSaveNewConnectionStringContainerCommand}" Height="30" Margin="1"></Button>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Изменить">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" ItemsSource="{Binding ConnectionStringContainersVMs}" SelectedItem="{Binding SelectedConnectionStringContainerVM}" AutoGenerateColumns="False" ColumnWidth="*" Margin="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UUID" IsReadOnly="True" Binding="{Binding Uuid}" Width="auto"></DataGridTextColumn>
                            <DataGridComboBoxColumn Header="Провайдер" ItemsSource="{Binding Source={StaticResource ProvidersNames}}" SelectedValueBinding="{Binding ProviderName}" Width="auto"></DataGridComboBoxColumn>
                            <DataGridTextColumn Header="Строка подключения" Binding="{Binding ConnectionString}" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>

                    </DataGrid>
                    <Button Grid.Row="1" Content="Сохранить изменения" Height="30" Margin="1"></Button>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>

{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Philadelphus": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3} {SourceContext:l30}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/philadelphus-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {SourceContext:l50}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      }
    ]
  },
  "ApplicationSettingsConfig": {
    "BasePath": "%USERPROFILE%\\AppData\\Local\\Philadelphus",
    "MainDataStorage": "%USERPROFILE%\\AppData\\Local\\Philadelphus\\MainDataStorage",
    "StoragesConfigFullPathString": "%USERPROFILE%\\AppData\\Local\\Philadelphus\\Configuration\\storages-config.json",
    "RepositoryHeadersConfigFullPathString": "%USERPROFILE%\\AppData\\Local\\Philadelphus\\Configuration\\repository-headers-config.json",
    "PluginsDirectoriesStrings": [
      "%USERPROFILE%\\AppData\\Local\\Philadelphus\\Plugins",
      ".\\Plugins"
    ]
  },
  "ConnectionStringsCollectionConfig": {
    "ConnectionStringContainers": [
      {
        "Uuid": "4c04583e-d57a-40c2-b281-3676af36dc54",
        "ProviderName": "Npgsql.EntityFrameworkCore.PostgreSQL",
        "ConnectionString": "Host=localhost;Database=Philadelphus;Username=postgres;Password=yourpassword"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}

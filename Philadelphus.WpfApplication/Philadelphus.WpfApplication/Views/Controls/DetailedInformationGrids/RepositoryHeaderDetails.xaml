<UserControl x:Class="Philadelphus.WpfApplication.Views.Controls.DetailedInformationGrids.RepositoryHeaderDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.WpfApplication.Views.Controls.DetailedInformationGrids"
             xmlns:converters="clr-namespace:Philadelphus.WpfApplication.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IsAvailableToColorConverter x:Key="isAvailableToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100" Text="Заголовок репозитория:" FontWeight="Bold" Margin="2"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование" Margin="2"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание" Margin="2"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Guid" Margin="2"></TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Guid}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Доступен" Margin="2"></TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding IsTreeRepositoryAvailable, Mode=OneWay}" Foreground="{Binding IsTreeRepositoryAvailable, Mode=OneWay, Converter={StaticResource isAvailableToColorConverter}}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="100" Text="Хранилище:" FontWeight="Bold" Margin="2"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Наименование" Margin="2"></TextBlock>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding OwnDataStorageName}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Guid" Margin="2"></TextBlock>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding OwnDataStorageUuid}" IsReadOnly="True" Margin="2"></TextBox>

        <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="100" Text="Локальная информация:" FontWeight="Bold" Margin="2"></TextBlock>
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Последнее открытие" Margin="2"></TextBlock>
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding LastOpening}" IsReadOnly="True" Margin="2"></TextBox>
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Избранное" Margin="2"></TextBlock>
        <CheckBox Grid.Row="10" Grid.Column="1" IsChecked="{Binding IsFavorite}" Margin="2"></CheckBox>
        <TextBlock Grid.Row="11" Grid.Column="0" Text="Скрытый" Margin="2"></TextBlock>
        <CheckBox Grid.Row="11" Grid.Column="1" IsChecked="{Binding IsHidden}" Margin="2"></CheckBox>

    </Grid>
</UserControl>

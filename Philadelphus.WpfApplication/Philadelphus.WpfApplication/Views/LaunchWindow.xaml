<Window x:Class="Philadelphus.WpfApplication.Views.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Philadelphus.WpfApplication.Views"
        xmlns:ctrls="clr-namespace:Philadelphus.WpfApplication.Views.Controls"
        mc:Ignorable="d"
        Title="Выбор репозитория"
        MinHeight="500" MinWidth="1000"
        WindowState="Maximized">
    <Window.Visibility>
        <Binding Path="StartWindowVisibility"/>
    </Window.Visibility>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2">
            <Run Text="Здравствуйте, "></Run>
            <Run Text="{Binding UserName, Mode=OneWay}"></Run>
            <Run Text="! "></Run>
            <Run Text="Выберите репозиторий для начала работы"></Run>
        </TextBlock>
        <GroupBox Grid.Row="1" Header="Заголовки репозиториев">
            <ListBox DataContext="{Binding RepositoryCollectionVM}" ItemsSource="{Binding TreeRepositoriesVMs}" SelectedItem="{Binding CurrentRepositoryExplorerVM}" Margin="2" BorderBrush="LightGray" BorderThickness="1">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="300"></ColumnDefinition>
                                    <ColumnDefinition Width="*" MinWidth="300"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="0" Height="20" VerticalAlignment="Center" Margin="2">
                                    <Run Text="Наименование: '" FontWeight="Light"></Run><Run Text="{Binding TreeRepository.Name, Mode=OneWay}"></Run><Run Text="'. "></Run>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Grid.Row="0" Height="20" VerticalAlignment="Center" Margin="2">
                                    <Run Text="Описание: '" FontWeight="Light"></Run><Run Text="{Binding TreeRepository.Description, Mode=OneWay}"></Run><Run Text="'. "></Run>
                                </TextBlock>
                                <TextBlock Grid.Column="2" Grid.Row="0" Height="20" VerticalAlignment="Center" Margin="2">
                                    <Run Text="UUID: '" FontWeight="Light"></Run><Run Text="{Binding TreeRepository.Guid, Mode=OneWay}"></Run><Run Text="'. "></Run>
                                </TextBlock>
                                <TextBlock Grid.Column="0" Grid.Row="1" Height="20" VerticalAlignment="Center" Margin="2">
                                    <Run Text="Хранилище: '" FontWeight="Light"></Run><Run Text="{Binding TreeRepository.OwnDataStorage.Name, Mode=OneWay}"></Run><Run Text="'. "></Run>
                                </TextBlock>
                            </Grid>
                            <Rectangle Grid.Row="1" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="Gray" Height="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <Button Grid.Row="2" Content="Создать новый репозиторий" Height="30" Command="{Binding OpenRepositoryCreationWindowCommand}" Margin="2"></Button>
        <Button Grid.Row="4" Content="Начать!" Height="30" Command="{Binding OpenMainWindowCommand}" Margin="2"></Button>
    </Grid>
</Window>

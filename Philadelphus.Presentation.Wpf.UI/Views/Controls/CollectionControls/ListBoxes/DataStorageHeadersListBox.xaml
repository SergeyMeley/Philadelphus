<UserControl x:Class="Philadelphus.Presentation.Wpf.UI.Views.Controls.CollectionControls.ListBoxes.DataStorageHeadersListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Philadelphus.Presentation.Wpf.UI.Views.Controls.CollectionControls.ListBoxes"
             xmlns:converters="clr-namespace:Philadelphus.Presentation.Wpf.UI.Converters"
mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:IsAvailableToColorConverter x:Key="isAvailableToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <ListBox Margin="1" BorderBrush="LightGray" BorderThickness="1"
             ItemsSource="{Binding DataStorageHeadersItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
             SelectedItem="{Binding DataStorageHeadersSelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="300"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Height="20" VerticalAlignment="Center" Margin="1">
                                                <Run Text="Хранилище: " FontWeight="Light" Foreground="LightSlateGray"></Run>
                                                <Run Text="{Binding Name, Mode=OneWay}" FontStyle="Italic"></Run>
                                                <Run Text="   "></Run>
                                                <Run Text="UUID:" FontWeight="Light" Foreground="LightSlateGray"></Run>
                                                <Run Text="{Binding Uuid, Mode=OneWay}" FontStyle="Italic"></Run>
                            </TextBlock>
                            <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="100" Height="20" VerticalAlignment="Center" Margin="5,2,5,2">
                                                <Run Text="Доступность:" FontWeight="Light" Foreground="LightSlateGray"></Run>
                                                <Run Text="{Binding IsAvailable, Mode=OneWay}" FontWeight="Bold" Foreground="{Binding IsAvailable, Mode=OneWay, Converter={StaticResource isAvailableToColorConverter}}"></Run>
                            </TextBlock>
                        </Grid>
                        <Rectangle Grid.Row="1" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="Gray" Height="1"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
